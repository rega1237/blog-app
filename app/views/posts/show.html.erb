<div class="solo-post">
  <div class="header-solo-post">
    <h2><%=@post.title%> by <%=@post.author.name%> </h2>
    <p> Comments: <%=@post.comments_counter%> Likes: <%=@post.likes_counter%></p>
  </div>
  <p><%=@post.text%></p>
  <%@comments.each do |comment|%>
    <div class="comments-post">
      <%=comment.author.name%>: <%= comment.text %></p>
      <% if can? :destroy, comment %>
       <%= button_to 'Delete Comment', user_post_comment_path(comment.author.id, @post.id, comment.id), method: :delete %>
      <% end %>
    </div>
  <%end%>
  <div class="button-container-flex">
    <%=link_to new_user_post_comment_path(@post.author.id, @post.id), class: "add-post" do%>
      Add new comment
    <%end%>
    <br>
    <%=form_with url: user_post_likes_path(@post.author, @post) do |form|%>
      <%= form.submit "❤️ Like", class: "like-btn" %>
    <%end%>
    <% if can? :destroy, @post %>
      <%= button_to 'Delete Post', post_path(@post.id), method: :delete, class: "like-btn" %>
    <% end %>
  </div>
</div>

